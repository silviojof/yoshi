{
  "name": "yoshi",
  "version": "1.0.0",
  "description": "Website for term 02",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style nested -o css scss",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "serve": "browser-sync start --proxy localhost/yoshi --files css/*.css, js/*.js, *.html, *.php, partials/*.php --browser Chrome",
    "buildcss": "npm run scss && npm run autoprefixer",
    "watchcss": "onchange \"src/scss\" -- npm run buildcss",
    "watchall": "npm-run-all -p serve watchcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silviojof/yoshi.git"
  },
  "author": "Silvio Oliveira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/silviojof/yoshi/issues"
  },
  "homepage": "https://github.com/silviojof/yoshi#readme",
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "browser-sync": "^2.18.7",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0"
  }
}
